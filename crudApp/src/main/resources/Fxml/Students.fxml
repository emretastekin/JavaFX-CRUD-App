<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="613.0" prefWidth="902.0" styleClass="form_container" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentproject.crudapp.StudentController">
   <children>
      <VBox layoutX="14.0" layoutY="53.0" prefHeight="406.0" prefWidth="330.0" spacing="33.3" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="53.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name" />
            <TextField fx:id="tFName" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name" />
            <TextField fx:id="tLastName" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Course" />
            <TextField fx:id="tCourse" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Student ID" />
            <TextField fx:id="tID" />
         </children>
      </VBox>
      <TableView fx:id="table" layoutX="356.0" layoutY="14.0" prefHeight="445.0" prefWidth="538.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="14.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
      <Label layoutX="80.0" layoutY="2.0" prefHeight="50.0" prefWidth="211.0" styleClass="title" text="Student Records" textFill="#c300c7">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <ButtonBar layoutX="225.0" layoutY="482.0" prefHeight="58.0" prefWidth="674.0">
        <buttons>
          <Button fx:id="btnSave" mnemonicParsing="false" onAction="#createStudent" text="Save">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" layoutX="388.0" layoutY="17.0" mnemonicParsing="false" onAction="#deleteStudent" text="Delete">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Button>
            <Button fx:id="btnClear" layoutX="302.0" layoutY="17.0" mnemonicParsing="false" onAction="#clearField" text="Clear">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" layoutX="473.0" layoutY="17.0" mnemonicParsing="false" onAction="#updateStudent" text="Update">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Button>
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
