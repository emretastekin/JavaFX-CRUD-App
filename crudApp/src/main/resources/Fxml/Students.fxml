<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="663.0" prefWidth="915.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cruddapp.crudapp.StudentController">
   <children>
      <VBox layoutX="14.0" layoutY="48.0" prefHeight="460.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Book Name" />
            <TextField fx:id="tBookName" prefWidth="300.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author" />
            <TextField fx:id="tAuthor" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Page Number" />
            <TextField fx:id="tPNumber" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price" />
            <TextField fx:id="tPrice" />
         </children>
      </VBox>
      <TableView fx:id="table" layoutX="347.0" layoutY="90.0" onMouseClicked="#getData" prefHeight="318.0" prefWidth="538.0">
        <columns>
          <TableColumn fx:id="colid" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colbName" prefWidth="75.0" text="Book Name" />
            <TableColumn fx:id="colAuthor" prefWidth="83.99996948242188" text="Author" />
            <TableColumn fx:id="colPNumber" prefWidth="122.4000244140625" text="Page Number">
                <cellValueFactory>
                    <PropertyValueFactory property="PAGENUMBER" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colPrice" prefWidth="122.4000244140625" text="Price">
               <cellValueFactory>
                  <PropertyValueFactory property="price" />
               </cellValueFactory>
            </TableColumn>

        </columns>
      </TableView>
      <Label layoutX="347.0" layoutY="23.0" text="Library Management System">
         <font>
            <Font size="33.0" />
         </font></Label>
      <ButtonBar layoutX="347.0" layoutY="440.0" prefHeight="40.0" prefWidth="538.0">
        <buttons>
          <Button fx:id="btnSave" mnemonicParsing="false" onAction="#createStudent" text="Save" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteStudent" text="Delete" />
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateStudent" text="Update" />
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearField" text="Clear" />
            <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="26.0" prefWidth="197.0" text="Search" />
        </buttons>
      </ButtonBar>
      <Button fx:id="btnExit" layoutX="790.0" layoutY="14.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="110.0" text="EXIT" />
   </children>
</AnchorPane>
